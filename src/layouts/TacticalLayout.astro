---
import '../styles/globals.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="AVILOMIK STUDIOS - MISSION CONTROL" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative min-h-screen">
		<div class="crt-overlay"></div>
		<div class="scanline"></div>
		
		<header class="fixed top-0 left-0 w-full p-4 z-50 flex justify-between items-center border-b border-terminal-green/20 bg-void/80 backdrop-blur-sm">
			<div class="flex items-center gap-2">
				<div class="w-2 h-2 bg-terminal-green animate-pulse"></div>
				<span class="text-xs uppercase font-ocr">[ SYSTEM ACTIVE ]</span>
			</div>
			<div class="text-xs font-ocr opacity-50">AVILOMIK-IO // V.1.0-INSURGENCY</div>
		</header>

		<main>
			<slot />
		</main>

		<footer class="fixed bottom-0 left-0 w-full p-2 z-50 flex justify-center border-t border-terminal-green/10 bg-void/80 text-[10px] uppercase tracking-tighter opacity-10">
			Unauthorized access will be detected and logged.
		</footer>
	</body>
</html>
